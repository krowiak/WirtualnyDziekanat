extends layout

block content
  
  each user in users
    - let userId = user.id;
    - let changedUserLocked = !user.locked;
    - let changedForcePassChange = !user.forcePasswordChange;
    div
      p #{user.id} #{user.firstName} #{user.lastName} #{user.locked} #{user.forcePasswordChange}
      button(onClick='$.post("changeUsers", {changes: [{id: ' + userId + ', locked: ' + changedUserLocked + '}]});') Przełącz zablokowanie
      button(onClick='$.post("changeUsers", {changes: [{id: ' + userId + ', forcePasswordChange: ' + changedForcePassChange + '}]});') Przełącz wymuszanie zmiany hasła