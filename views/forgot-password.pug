extends layout

block content
  .col-md-4.brd.col-md-offset-4
    .panel.panel-primary
      .panel-heading Odzyskiwanie hasła
      .panel-body
        form(method='POST' action='/password/forgot')
          div.form-group
            label(for='email') Adres e-mail:
            input#email.form-control(type='email' name='email')
          button.btn.btn-primary(type='submit' enctype='application/x-www-form-urlencoded') Resetuj hasło